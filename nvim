let g:python_host_prog = '/usr/local/bin/python' 

call plug#begin('~/.config/nvim/plugged')

Plug 'Valloric/YouCompleteMe', { 'do': './install.py' }
Plug 'pangloss/vim-javascript'
Plug 'jiangmiao/auto-pairs'
Plug 'Yggdroot/indentLine'
Plug 'vim-airline/vim-airline'
Plug 'rust-lang/rust.vim'
Plug 'Shutnik/jshint2.vim'
Plug 'ctrlpvim/ctrlp.vim'
Plug 'alfredodeza/pytest.vim'
Plug 'marcopaganini/termschool-vim-theme'
Plug 'thinca/vim-quickrun'
Plug 'dhruvasagar/vim-table-mode'

call plug#end()

let g:ycm_global_ycm_extra_conf = '~/.config/nvim/ycm_extra_conf.py'

" remap vim navigation keys one key to right
noremap j <Left>
noremap k <Down>
noremap l <Up>
noremap ; <Right>
noremap h <NOP>

set number
filetype plugin on  
syntax on
syntax enable
set nobackup
set tabstop=2 shiftwidth=2 softtabstop=2 expandtab smarttab 
"set autoindent cindent
set smartindent
set clipboard=unnamed
set mouse=a
set ruler

inoremap <CR> <CR>x<BS>
nnoremap o ox<BS>
nnoremap O Ox<BS>

" quick reload .vimrc file
autocmd! bufwritepost ~/.config/nvim/init.vim source ~/.config/nvim/init.vim

set backspace=indent,eol,start

let g:ycm_autoclose_preview_window_after_completion=1

" highlight while searching for a pattern
set hlsearch

"colorscheme desert
"colorscheme molokai
"colorscheme material
"colorscheme solarized
"colorscheme dracula
"set background=dark
"colorscheme sierra
"colorscheme tayra
colorscheme termschool
"colorscheme onedark
"colorscheme material-theme

set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey40

" disable .swp. file creation
set noswapfile


" move a hole block of code
" better identation
vnoremap > >gv 
vnoremap < <gv

" remap 0 to ^
noremap 0 ^

" tab navigation
map <Leader>n <esc>:tabprevious<CR>
map <C-n> <esc>:tabprevious<CR>
map <Leader>m <esc>:tabnext<CR>
map <C-m> <esc>:tabnext<CR>

" ctrlP
let g:ctrlp_prompt_mappings = {
    \ 'AcceptSelection("e")': ['<c-t>'],
    \ 'AcceptSelection("t")': ['<cr>', '<2-LeftMouse>'],
    \ }


" alternative command to <ESC>
inoremap jj <ESC>
cnoremap jj <ESC>

" prevent cursor to return a char when pressing ESC
" inoremap <silent> <Esc> <C-O>:stopinsert<CR>
 
" Remap TableModeToggle
map ,tm :TableModeToggle<CR>i

